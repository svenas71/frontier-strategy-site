{% macro pageIntro(title, description, ctaHref="", ctaLabel="") -%}
<section class="mx-auto max-w-6xl px-4 pt-12 md:pt-16">
  <div class="flex items-end justify-between gap-6">
    <div>
      <h1 class="text-3xl md:text-4xl font-semibold">{{ title }}</h1>
      {% if description %}
        <p class="mt-3 text-slate-600 md:text-lg">{{ description | safe }}</p>
      {% endif %}
    </div>

    {% if ctaHref and ctaLabel %}
      <a href="{{ ctaHref }}" class="text-sm underline whitespace-nowrap">
        {{ ctaLabel }}
      </a>
    {% endif %}
  </div>
</section>
{%- endmacro %}