{% macro pageIntro(title, description, ctaHref="", ctaLabel="") -%}
<section class="mb-8">
  <!-- Stack on mobile; row on md+ -->
  <div class="flex flex-col md:flex-row md:items-end md:justify-between md:gap-6">
    <!-- Text column -->
    <div class="min-w-0 md:flex-1">
      <h1 class="text-2xl md:text-3xl font-semibold tracking-tight">{{ title }}</h1>
      {% if description %}
        <p class="mt-2 text-slate-600 text-base md:text-lg">{{ description | safe }}</p>
      {% endif %}

      {# Mobile CTA: sits under the paragraph, left-aligned #}
      {% if ctaHref and ctaLabel %}
        <a href="{{ ctaHref }}"
           class="mt-2 inline-block text-sm underline whitespace-nowrap md:hidden">
          {{ ctaLabel }}
        </a>
      {% endif %}
    </div>

    {# Desktop CTA: right-aligned, never wraps #}
    {% if ctaHref and ctaLabel %}
      <a href="{{ ctaHref }}"
         class="hidden md:inline-block text-sm underline whitespace-nowrap shrink-0 self-end">
        {{ ctaLabel }}
      </a>
    {% endif %}
  </div>
</section>
{%- endmacro %}