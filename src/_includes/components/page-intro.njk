{% macro pageIntro(title, description, ctaHref="", ctaLabel="") -%}
<section class="mb-8">
  <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between md:gap-6">
    <div class="min-w-0 md:flex-1">
      <h1 class="text-2xl md:text-3xl font-semibold">{{ title }}</h1>
      {% if description %}
        <p class="mt-2 text-slate-600 md:text-lg">{{ description | safe }}</p>
      {% endif %}
    </div>

    {% if ctaHref and ctaLabel %}
      <a href="{{ ctaHref }}"
         class="inline-block text-sm underline whitespace-nowrap shrink-0 self-start md:self-end">
        {{ ctaLabel }}
      </a>
    {% endif %}
  </div>
</section>
{%- endmacro %}