---
layout: layouts/base.njk
---
<article class="mx-auto max-w-3xl px-4 py-12">
  <header>
    <h1 class="text-3xl font-semibold">{{ title }}</h1>

    <p class="mt-2 text-sm text-slate-500">
      {{ page.date | readableDate }}
      {% if author %} · {{ author }}{% endif %}
      {% if readingTime %} · {{ readingTime }} min read{% endif %}
    </p>

    {% if summary %}
      <p class="mt-3 text-slate-600">{{ summary }}</p>
    {% endif %}
  </header>

  <div class="prose prose-slate prose-lg max-w-none mt-8">
   {{ content | safe }}
  </div>

  <footer class="mt-10">
    <a class="text-sm underline" href="/signals/">← All Frontier Signals</a>
  </footer>
</article>

{% block styles %}
<style>
  /* Reset margin for stacked h3s */
  .prose h3 {
    margin-bottom: 0; /* no gap by default */
  }

  /* Add a little gap only between consecutive h3s */
  .prose h3 + h3 {
    margin-top: 0.25rem; /* tight spacing between the pair */
  }

  /* Then add breathing room after the last h3 in a run */
  .prose h3:last-of-type {
    margin-bottom: 2rem; /* adjust to taste */
  }
  /* let prose fill the container */
  .prose { max-width: none; }

  /* your h3 pairing rules… */
  .prose h3 { margin-bottom: 0; }
  .prose h3 + h3 { margin-top: 0.25rem; }
  .prose h3 + p { margin-top: 0; }
  .prose h3:last-of-type { margin-bottom: 2rem; }
</style>
{% endblock %}