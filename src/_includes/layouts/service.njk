---
layout: layouts/base.njk
---
<article class="mx-auto max-w-4xl px-4 py-12">
  <h1 class="text-3xl font-semibold">{{ title }}</h1>
  
  {% if summary %}
  <p class="mt-4 text-xl md:text-2xl font-medium text-slate-700 leading-relaxed">
    {{ summary }}
  </p>
  {% endif %}
  
  <div class="prose prose-slate prose-lg max-w-none mt-6">
    {{ content | safe }}
  </div>
</article>