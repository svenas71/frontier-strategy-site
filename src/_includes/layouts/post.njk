---
layout: layouts/base.njk
---

<article class="mx-auto max-w-3xl px-4 py-12">
  <header class="mb-6">
    <h1 class="text-3xl font-semibold">{{ title }}</h1>

    {% if date %}
      <p class="mt-2 text-sm text-slate-500">{{ page.date | readableDate }}</p>
    {% endif %}

    {% if summary %}
      <p class="mt-4 text-xl md:text-2xl font-medium text-slate-700 leading-relaxed">
        {{ summary }}
      </p>
    {% endif %}
  </header>

  <div class="prose prose-slate mt-8 leading-snug">
    {{ content | safe }}
  </div>

  <footer class="mt-10">
    <a class="text-sm underline" href="/signals/">â† All Frontier Signals</a>
  </footer>
</article>