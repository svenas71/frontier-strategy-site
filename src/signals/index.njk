---
layout: layouts/base.njk
title: Frontier Signals
permalink: /signals/index.html
---

<!-- Frontier Signals (auto-advancing carousel) -->
<section id="signals" class="mx-auto max-w-6xl px-4 py-16">
  <div class="flex items-end justify-between">
    <h2 class="text-2xl md:text-3xl font-semibold">Frontier Signals</h2>
    <a href="/signals/" class="text-sm underline">See all posts →</a>
  </div>

  <div
    x-data="{ active: 0, total: {{ collections.signal | length }} }"
    x-init="setInterval(() => { active = (active + 1) % total }, 1500)"
    class="relative mt-6 overflow-hidden rounded-2xl border min-h-[9rem]"
  >
    {% for p in collections.signal | reverse %}
      <article
        class="absolute inset-0 p-6 bg-white transition-opacity duration-700"
        x-show="active === {{ loop.index0 }}"
        x-transition.opacity
      >
        <h3 class="font-semibold text-base">
          <a href="{{ p.url }}" class="hover:underline">{{ p.data.title }}</a>
        </h3>
        {% if p.data.summary %}
          <p class="mt-2 text-sm text-slate-600">{{ p.data.summary }}</p>
        {% endif %}
        <p class="mt-4"><a class="text-sm underline" href="{{ p.url }}">Read →</a></p>
      </article>
    {% endfor %}
  </div>
</section>