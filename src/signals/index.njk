<section class="mx-auto max-w-6xl px-4 py-16">
  <h1 class="text-2xl md:text-3xl font-semibold">Frontier Signals</h1>

  <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {% for p in collections.signal | reverse %}
      <article class="rounded-2xl border bg-white p-6 h-full">
        <h2 class="font-semibold text-base">
          <a href="{{ p.url }}" class="hover:underline">{{ p.data.title }}</a>
        </h2>
        <p class="mt-1 text-xs text-slate-500">
          {% if p.date %}{{ p.date | readableDate }}{% endif %}
        </p>
        {% if p.data.summary %}
          <p class="mt-2 text-sm text-slate-600">{{ p.data.summary }}</p>
        {% endif %}
        <p class="mt-4"><a class="text-sm underline" href="{{ p.url }}">Read â†’</a></p>
      </article>
    {% endfor %}
  </div>
</section>