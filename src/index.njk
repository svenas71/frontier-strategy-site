{% set posts = collections.signal | reverse %}
{% set total = posts | length %}

<!-- Frontier Signals: responsive auto-advancing carousel (1/2/3-up) -->
<section id="signals" class="mx-auto max-w-6xl px-4 py-16">
  <div class="flex items-end justify-between">
    <h2 class="text-2xl md:text-3xl font-semibold">Frontier Signals</h2>
    <a href="/signals/" class="text-sm underline">See all posts →</a>
  </div>

  {% if total >= 1 %}
  <style>[x-cloak]{display:none!important}</style>

  <div x-data="carouselResponsive({ total: {{ total }} })" x-init="init()" class="mt-6 select-none">
    <!-- viewport -->
    <div class="relative overflow-hidden rounded-2xl carousel-viewport">
      <!-- track -->
      <div class="track flex -mx-3 transition-transform duration-700 will-change-transform touch-pan-y" :style="translate">
        {% for p in posts %}
          <article class="w-full sm:w-1/2 md:w-1/3 shrink-0 px-3 py-4">
            <div class="h-full rounded-2xl border bg-white p-6 shadow-sm">
              <h3 class="font-semibold text-base">
                <a href="{{ p.url }}" class="hover:underline">{{ p.data.title }}</a>
              </h3>
              {% if p.data.summary %}
                <p class="mt-2 text-sm text-slate-600">{{ p.data.summary }}</p>
              {% endif %}
              <p class="mt-4"><a class="text-sm underline" href="{{ p.url }}">Read →</a></p>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>

    <!-- controls -->
    <div class="flex justify-center items-center gap-4 mt-4">
      <button @click="prev" class="text-sm leading-none" aria-label="Previous">←</button>
      <div class="flex items-center gap-2">
        <template x-for="i in (total - visible + 1)">
          <button class="w-2 h-2 rounded-full"
            :class="active === (i-1) ? 'bg-black' : 'bg-slate-300'"
            @click="go(i-1)"></button>
        </template>
      </div>
      <button @click="next" class="text-sm leading-none" aria-label="Next">→</button>
    </div>
  </div>
  {% else %}
    <!-- Fallback if no posts -->
    <p class="mt-6 text-sm text-slate-600">Signals coming soon.</p>
  {% endif %}
</section>

<!-- Inline Alpine helper (scoped) -->
<script>
  function carouselResponsive({ total }) {
    return {
      total,
      visible: 1,
      active: 0,
      translate: 'transform: translateX(0%)',
      intervalMs: 15000,
      intervalId: null,

      step() { return 100 / this.visible; },
      maxStart() { return Math.max(0, this.total - this.visible); },
      clamp() {
        if (this.active > this.maxStart()) this.active = 0;
        if (this.active < 0) this.active = this.maxStart();
      },
      update() { this.translate = `transform: translateX(-${this.active * this.step()}%)`; },

      next() { this.active++; this.clamp(); this.update(); },
      prev() { this.active--; this.clamp(); this.update(); },
      go(i) { this.active = Math.max(0, Math.min(i, this.maxStart())); this.update(); },

      setVisibleByBP() {
        if (window.matchMedia('(min-width: 768px)').matches) this.visible = 3;
        else if (window.matchMedia('(min-width: 640px)').matches) this.visible = 2;
        else this.visible = 1;
      },

      startTimer() {
        this.stopTimer();
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
        this.intervalId = setInterval(() => this.next(), this.intervalMs);
      },
      stopTimer() {
        if (this.intervalId) { clearInterval(this.intervalId); this.intervalId = null; }
      },

      attachSwipe() {
  // Attach to the fixed viewport, not the moving track
  const viewport = this.$root.querySelector('.carousel-viewport');
  if (!viewport) return;

  // Only run on touch-capable devices
  const isTouchCapable = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
  if (!isTouchCapable) return;

  // Improve scroll behavior: allow vertical scroll, we capture horizontal intent
  viewport.style.touchAction = 'pan-y';

  let startX = null, moved = false;

  const onStart = (clientX, target) => {
    // Don’t hijack taps that start on links
    if (target && target.closest && target.closest('a')) return;
    startX = clientX;
    moved = false;
  };

  const onMove = (clientX) => {
    if (startX == null) return;
    const dx = clientX - startX;
    if (Math.abs(dx) > 10) moved = true;
  };

  const onEnd = (clientX) => {
    if (startX == null) return;
    const dx = clientX - startX;
    if (moved && Math.abs(dx) > 40) {
      dx < 0 ? this.next() : this.prev();
    }
    startX = null; moved = false;
  };

  // Prefer Pointer Events when available
  if (window.PointerEvent) {
    viewport.addEventListener('pointerdown', (e) => {
      if (e.pointerType !== 'touch') return;
      onStart(e.clientX, e.target);
    }, { passive: true });

    viewport.addEventListener('pointermove', (e) => {
      if (e.pointerType !== 'touch') return;
      onMove(e.clientX);
    }, { passive: true });

    viewport.addEventListener('pointerup', (e) => {
      if (e.pointerType !== 'touch') return;
      onEnd(e.clientX);
    }, { passive: true });

    viewport.addEventListener('pointercancel', () => { startX = null; moved = false; }, { passive: true });
  } else {
    // Fallback: Touch Events
    viewport.addEventListener('touchstart', (e) => onStart(e.touches[0].clientX, e.target), { passive: true });
    viewport.addEventListener('touchmove',  (e) => onMove(e.touches[0].clientX), { passive: true });
    viewport.addEventListener('touchend',   (e) => onEnd(e.changedTouches[0].clientX), { passive: true });
    viewport.addEventListener('touchcancel', () => { startX = null; moved = false; }, { passive: true });
  }
},

      init() {
        // initial
        this.setVisibleByBP();
        this.clamp();
        this.update();
        this.attachSwipe();
        this.startTimer();

        // resize
        const onResize = () => {
          const prev = this.visible;
          this.setVisibleByBP();
          if (this.visible !== prev) { this.clamp(); this.update(); }
        };
        window.addEventListener('resize', onResize, { passive: true });

        // pause/resume on tab visibility
        document.addEventListener('visibilitychange', () => {
          if (document.hidden) this.stopTimer(); else this.startTimer();
        });
      }
    }
  }
</script>

