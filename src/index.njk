<!-- Frontier Signals: 3-up auto-advancing carousel -->
<section id="signals" class="mx-auto max-w-6xl px-4 py-16">
  <div class="flex items-end justify-between">
    <h2 class="text-2xl md:text-3xl font-semibold">Frontier Signals</h2>
    <a href="/signals/" class="text-sm underline">See all posts →</a>
  </div>

  {% set posts = collections.signal | reverse %}
  {% set total = posts | length %}

  {% if total >= 3 %}
  <style>[x-cloak]{display:none!important}</style>

  <div x-data="carousel3({ total: {{ total }} })" x-init="start()" class="mt-6">
  <!-- viewport -->
  <div class="relative overflow-hidden">
    <!-- track -->
    <div class="flex -mx-3 transition-transform duration-700 will-change-transform" :style="translate">
      {% for p in posts %}
        <article class="w-1/3 shrink-0 px-3 py-4">
          <div class="h-full rounded-2xl border bg-white p-6 shadow-sm">
            <h3 class="font-semibold text-base">
              <a href="{{ p.url }}" class="hover:underline">{{ p.data.title }}</a>
            </h3>
            {% if p.data.summary %}
              <p class="mt-2 text-sm text-slate-600">{{ p.data.summary }}</p>
            {% endif %}
            <p class="mt-4"><a class="text-sm underline" href="{{ p.url }}">Read →</a></p>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>

  <!-- controls: arrows + dots -->
  <div class="flex justify-center items-center gap-4 mt-4">
    <button @click="prev" class="text-sm leading-none">←</button>
    <div class="flex items-center gap-2">
      <template x-for="i in total - 2">
        <button class="w-2 h-2 rounded-full"
          :class="active === (i-1) ? 'bg-black' : 'bg-slate-300'"
          @click="go(i-1)"></button>
      </template>
    </div>
    <button @click="next" class="text-sm leading-none">→</button>
  </div>
</div>

  {% else %}
    <!-- Fallback if fewer than 3 posts -->
    <div class="mt-6 grid md:grid-cols-{{ total }} gap-6">
      {% for p in posts %}
        <article class="rounded-2xl border bg-white p-6">
          <h3 class="font-semibold text-base">
            <a href="{{ p.url }}" class="hover:underline">{{ p.data.title }}</a>
          </h3>
          {% if p.data.summary %}
            <p class="mt-2 text-sm text-slate-600">{{ p.data.summary }}</p>
          {% endif %}
          <p class="mt-4"><a class="text-sm underline" href="{{ p.url }}">Read →</a></p>
        </article>
      {% endfor %}
    </div>
  {% endif %}
</section>

<!-- Alpine helper for a 3-up carousel -->
<script>
  function carousel3({ total }) {
    return {
      active: 0, // leftmost visible index
      total,
      translate: 'transform: translateX(0%)',
      step() { return 100/3 }, // each card is 33.333% of viewport
      clamp() { if (this.active > this.total - 3) this.active = 0; if (this.active < 0) this.active = this.total - 3; },
      update() { this.translate = `transform: translateX(-${this.active * this.step()}%)`; },
      next() { this.active++; this.clamp(); this.update(); },
      prev() { this.active--; this.clamp(); this.update(); },
      go(i) { this.active = i; this.update(); },
      start() { this.update(); setInterval(() => this.next(), 10000); }
    }
  }
</script>



