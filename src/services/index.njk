<section class="mx-auto max-w-6xl px-4 py-12">
  <h1 class="text-3xl font-semibold">Services</h1>
  <div class="mt-6 grid md:grid-cols-3 gap-6">
    {% for s in collections.service | sort(attribute='data.title') %}
      <article class="rounded-2xl border p-6">
        <h2 class="font-semibold text-lg">
          <a href="{{ s.url }}">{{ s.data.title }}</a>
        </h2>
        {% if s.data.summary %}
          <p class="mt-2 text-sm text-slate-600">{{ s.data.summary }}</p>
        {% endif %}
        <p class="mt-4">
          <a class="text-sm underline" href="{{ s.url }}">Learn more →</a>
        </p>
      </article>
    {% endfor %}
  </div>
</section>